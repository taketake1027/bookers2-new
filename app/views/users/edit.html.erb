<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @user, local: true do |f| %>
        <h2>User Info</h2>
        
        <!-- 名前入力 -->
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control", placeholder: "名前" %>
        </div>

        <!-- プロフィール画像入力 -->
        <div class="mb-3">
          <%= f.label :profile_image, class: "form-label" %>
          <%= f.file_field :profile_image, class: "form-control", accept: "image/*" %>
        </div>

        <!-- 自己紹介入力 -->
        <div class="mb-3">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, id: "inputIntroduction", class: "form-control", placeholder: "自己紹介", rows: 4 %>
        </div>

        <!-- 保存ボタン -->
        <div class="mb-3">
          <%= f.submit "Update User", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
